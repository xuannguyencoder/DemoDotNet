@model List<DemoDotNet.WebMVC.Models.EF.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int number = 0;
}
<span id="message" class="d-none">@TempData["Message"]</span>
<span id="status" class="d-none">@TempData["Status"]</span>
<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h3 style="color: #593bdb">Quản lý sản phẩm</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Sản phẩm</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Danh sách</a></li>
                </ol>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <div>
                <a href="/admin/san-pham/them" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody style="color: #6e6e6e">
                                @foreach (var item in Model)
                                {
                                    number++;
                                    <tr>
                                        <td>@number</td>
                                        <td><img style="width:100px;height:auto" src="~/Assets/uploads/images/products/@item.Image"></td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("N0")<span>đ</span></td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <a href="#" class="badge badge-primary update_status" data-id="@item.ID">Hiển thị</a>
                                            }
                                            else
                                            {
                                                <a href="#" class="badge badge-primary update_status" data-id="@item.ID">Ẩn</a>
                                            }
                                        </td>
                                        <td>
                                            <a href="/admin/san-pham/chinh-sua/@item.ID" style="color:green">
                                                <i class="fa-solid fa-pen-to-square fa-xl"></i>
                                            </a>
                                            <a href="#" class="sweet-confirm" data-id="@item.ID" style="color:crimson">
                                                <i class="fa-solid fa-trash-can fa-xl"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Assets/Admin/vendor/toastr/js/toastr.min.js"></script>
    <script src="~/Assets/js/toastr.js"></script>

    <script src="~/Assets/Admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/js/plugins-init/datatables.init.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Assets/js/product.js"></script>
    
}
@section Links{
    <link href="~/Assets/Admin/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/Admin/vendor/toastr/css/toastr.min.css">
}